{
  "type": "minecraft:multi_action",
  "title": "Instant Pickup Radius - Clumps Config",
  "inputs": [
    {
      "type": "minecraft:number_range",
      "key": "value",
      "width": 200,
      "label": "Instant Pickup Radius",
      "start": 1,
      "end": 30,
      "step": 1,
      "initial": 3
    }
  ],
  "can_close_with_escape": true,
  "pause": true,
  "exit_action": {
    "label": "Back",
    "tooltip": "Click to go back",
    "action": {
      "type": "run_command",
      "command": "/dialog show @s clumps:config"
    }
  },
  "columns": 1,
  "actions": [
    {
      "label": "Save",
      "tooltip": "Click to edit instant pickup radius",
      "width": 200,
      "action": {
        "type": "dynamic/run_command",
        "template": "/scoreboard players set instant_pickup_radius clumps.config $(value)"
      }
    }
  ]
}